    <script>
    async function initiatePayment() {
        const statusDiv = document.getElementById('paymentStatus');
        statusDiv.style.display = 'block';
        statusDiv.className = 'alert alert-info';
        statusDiv.textContent = 'Processing payment...';

        try {
            const response = await fetch('/api/subscription/initiate-payment', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    phone: '0784538491',
                    plan: 'monthly'
                })
            });

            const data = await response.json();
            
            if (data.success) {
                statusDiv.className = 'alert alert-success';
                statusDiv.innerHTML = data.message.replace(/\n/g, '<br>');
            } else {
                statusDiv.className = 'alert alert-danger';
                statusDiv.textContent = data.error || 'Payment failed. Please try again.';
            }
        } catch (error) {
            statusDiv.className = 'alert alert-danger';
            statusDiv.textContent = 'An error occurred. Please try again.';
            console.error('Payment error:', error);
        }
    }

    function playWelcome() {
        const audio = document.getElementById('welcomeAudio');
        const button = document.getElementById('welcomeButton');
        
        // Reset audio to start if it was already played
        audio.currentTime = 0;
        
        // Play audio
        audio.play();
        
        // Update button while playing
        button.innerHTML = '<i class="fas fa-volume-up me-2"></i>AI Voice Assistant';
        button.disabled = true;
        
        // Reset button when audio ends
        audio.onended = function() {
            button.innerHTML = '<i class="fas fa-volume-up me-2"></i>AI Voice Assistant';
            button.disabled = false;
        };
    }

    function showDonationNumber() {
        const donationNumber = document.getElementById('donationNumber');
        if (donationNumber.style.display === 'none') {
            donationNumber.style.display = 'block';
            // Smooth scroll to the number
            donationNumber.scrollIntoView({ behavior: 'smooth' });
        }
    }

    function copyNumber() {
        const number = '+250784538491';
